{
  "name": "lifion-kinesis",
  "version": "1.0.0",
  "description": "Lifion client for Amazon Kinesis Data streams",
  "keywords": [
    "adp",
    "amazon",
    "api",
    "aws",
    "big data",
    "client",
    "core",
    "kinesis",
    "lifion"
  ],
  "author": "Edgardo Avil√©s <Edgardo.Aviles@ADP.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build-docs": "jsdoc2md -t ./templates/README.hbs ./lib/*.js > ./README.md && git add ./README.md",
    "build-docs-watch": "npm-watch build-docs",
    "eslint": "eslint . --ext .js,.json --cache",
    "format": "prettier --write '**/*.{md,js,json}' '!reports/**/*.{js,json}'",
    "jest": "JEST_JUNIT_OUTPUT=./reports/junit/js-test-results.xml jest",
    "jest-watch": "npm run jest -- --watch --coverageReporters=html",
    "lint": "eslint . --ext .js,.json --format junit -o ./reports/junit/js-lint-results.xml",
    "prepare": "check-engines",
    "test": "npm run jest -- --ci --runInBand && codecov",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "aws-sdk": "^2.378.0",
    "aws4": "^1.8.0",
    "fast-deep-equal": "^2.0.1",
    "got": "^9.5.0",
    "lifion-aws-event-stream": "^1.0.1",
    "lzutf8": "^0.5.5"
  },
  "devDependencies": {
    "auto-changelog": "^1.10.2",
    "chalk": "^2.4.1",
    "check-engines": "^1.5.0",
    "codecov": "^3.1.0",
    "eslint": "^5.10.0",
    "eslint-config-lifion": "^1.0.3",
    "husky": "^1.3.0",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "jsdoc-to-markdown": "^4.0.1",
    "lint-staged": "^8.1.0",
    "npm-watch": "^0.5.0",
    "prettier": "^1.15.3",
    "semver": "^5.6.0"
  },
  "auto-changelog": {
    "commitLimit": false,
    "template": "./templates/CHANGELOG.hbs"
  },
  "eslintConfig": {
    "extends": "lifion",
    "rules": {
      "jsdoc/require-returns-description": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build-docs && lint-staged"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageDirectory": "../reports/coverage",
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "rootDir": "lib",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "renovate": {
    "branchPrefix": "feature/renovate-",
    "engines": {
      "enabled": false
    },
    "extends": [
      "config:base"
    ],
    "rangeStrategy": "bump"
  },
  "watch": {
    "build-docs": {
      "patterns": [
        "lib"
      ]
    }
  }
}
