{
  "name": "lifion-kinesis",
  "version": "0.0.0",
  "description": "Lifion client for Amazon Kinesis Data streams",
  "keywords": [
    "adp",
    "amazon",
    "api",
    "aws",
    "big data",
    "client",
    "core",
    "kinesis",
    "lifion"
  ],
  "author": "Edgardo Avil√©s <eaviles@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "engines": {
    "node": ">=8.6.0"
  },
  "scripts": {
    "build-docs": "mkdir -p docs && jsdoc2md --no-gfm lib/*.js > docs/API.md && git add docs/API.md",
    "build-docs-watch": "npm-watch build-docs",
    "eslint": "eslint . --ext .js,.json --cache",
    "format": "prettier --write '**/*.{eslintrc,md,js,json}' '!reports/*'",
    "lint": "eslint . --ext .js,.json --cache -f checkstyle > ./reports/checkstyle.xml",
    "precommit": "npm run build-docs && lint-staged",
    "prelint": "rm -f ./reports/checkstyle.xml && mkdir -p ./reports",
    "prepare": "check-engines",
    "pretest": "mkdir -p ./reports",
    "test": "TEST_REPORT_PATH=./reports jest && codecov",
    "test-watch": "npm run test -- --watch --coverageReporters=html",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "devDependencies": {
    "auto-changelog": "1.8.0",
    "chalk": "2.4.1",
    "check-engines": "1.5.0",
    "codecov": "3.1.0",
    "eslint": "4.19.1",
    "eslint-config-lifion": "0.1.3",
    "husky": "0.14.3",
    "jest": "23.6.0",
    "jest-junit-reporter": "1.1.0",
    "jsdoc-to-markdown": "4.0.1",
    "lint-staged": "7.2.2",
    "npm-watch": "0.3.0",
    "prettier": "1.14.2",
    "semver": "5.5.1"
  },
  "auto-changelog": {
    "commitLimit": false
  },
  "eslintConfig": {
    "extends": "lifion"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageDirectory": "../reports",
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "rootDir": "lib",
    "testEnvironment": "node",
    "testResultsProcessor": "jest-junit-reporter"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "watch": {
    "build-docs": {
      "patterns": [
        "lib"
      ]
    }
  }
}
